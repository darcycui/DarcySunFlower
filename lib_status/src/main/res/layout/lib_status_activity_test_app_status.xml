<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestAppStatusActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnGallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Open Gallery"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnOtherApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Other App"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnNotificationListener"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notification Listener"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnCrash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Make a crash"
            android:textAllCaps="false" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>