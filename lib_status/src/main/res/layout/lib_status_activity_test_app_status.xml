<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestAppStatusActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnGallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Open Gallery"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnPreviewImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Image Preview"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnPreviewVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Video Preview"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnPreviewAudio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Audio Preview"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnPreviewFile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="File Preview"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnSaveFile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="File Save To Download"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnOtherApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Other App"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnNotificationListener"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notification Listener"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnCrash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Make a crash"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/checkBattery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check battery"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/checkDeveloperMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check DeveloperMode"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnWorker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Worker"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnJobScheduler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start JobScheduler"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnIntentService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start IntentService"
            android:textAllCaps="false" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>