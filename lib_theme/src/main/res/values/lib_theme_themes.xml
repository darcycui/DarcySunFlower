<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base AppCompat Theme for overriding -->
    <style name="lib_theme_BaseAppCompatTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:colorPrimary">@color/lib_theme_green_500</item>
        <item name="android:colorPrimaryDark">@color/lib_theme_green_700</item>
        <item name="android:colorAccent">@color/lib_theme_green_700</item>
        <item name="android:colorSecondary">@color/lib_theme_yellow_500</item>
        <item name="android:colorBackground">@color/lib_theme_white</item>
    </style>

    <!-- Base Material Theme for overriding -->
    <style name="lib_theme_BaseMaterialTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/lib_theme_green_500</item>
        <item name="colorPrimaryDark">@color/lib_theme_green_700</item>
        <item name="colorOnPrimary">@color/lib_theme_yellow_500</item>
        <item name="colorOnSurface">@color/lib_theme_black</item>
        <item name="colorAccent">@color/lib_theme_green_700</item>
        <item name="colorSurface">@color/lib_theme_gray_50</item>
        <item name="colorSecondary">@color/lib_theme_yellow_500</item>
        <item name="android:colorBackground">@color/lib_theme_white</item>
    </style>

    <style name="lib_theme_AppCompatTheme" parent="lib_theme_BaseAppCompatTheme">
        <item name="android:statusBarColor">@color/lib_theme_white</item>
        <item name="android:navigationBarColor">@color/lib_theme_white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="lib_theme_MaterialTheme" parent="lib_theme_BaseMaterialTheme">
        <item name="android:statusBarColor">@color/lib_theme_white</item>
        <item name="android:navigationBarColor">@color/lib_theme_white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>